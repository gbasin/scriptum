{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-cli/schema.json",
  "productName": "Scriptum",
  "version": "0.1.0",
  "identifier": "com.scriptum.app",
  "build": {
    "frontendDist": "../../web/dist",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm --filter @scriptum/web build",
    "beforeDevCommand": "pnpm --filter @scriptum/web dev"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Scriptum",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' ws://localhost:* http://localhost:*; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost",
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": false,
    "icon": ["src/icon.png"],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": ""
    },
    "deep-link": {
      "desktop": {
        "schemes": ["scriptum"]
      }
    }
  }
}
