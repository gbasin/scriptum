{
  "name": "scriptum",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "concurrently -k -s first -n web,daemon,relay -c cyan,green,magenta \"pnpm --filter @scriptum/web dev\" \"cargo run --bin scriptumd\" \"cargo run --bin scriptum-relay\"",
    "dev:local": "concurrently -k -s first -n web,daemon -c cyan,green \"VITE_SCRIPTUM_LOCAL_MODE=true pnpm --filter @scriptum/web dev\" \"cargo run --bin scriptumd\"",
    "dev:web": "pnpm --filter @scriptum/web dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "coverage": "pnpm coverage:ts && pnpm coverage:rust",
    "coverage:ts": "pnpm --filter @scriptum/web run coverage && pnpm --filter @scriptum/editor run coverage && pnpm --filter @scriptum/shared run coverage && pnpm --filter @scriptum/mcp-server run coverage",
    "coverage:rust": "scripts/ci/rust-coverage.sh",
    "ci:job": "scripts/ci/pipeline.sh",
    "ci:precommit": "scripts/ci/pipeline.sh precommit",
    "ci:full": "scripts/ci/pipeline.sh full",
    "test:ui:smoke": "pnpm exec playwright test -c tests/e2e/playwright.config.mts --grep @smoke",
    "test:ui": "pnpm exec playwright test -c tests/e2e/playwright.config.mts",
    "test:desktop:webdriver": "pnpm exec playwright test -c tests/e2e/desktop-webdriver.config.mts --grep @desktop",
    "test:ui:auth": "pnpm exec playwright test -c tests/e2e/playwright.auth.config.mts",
    "test:ui:relay": "pnpm exec playwright test -c tests/e2e/playwright.relay-integration.config.mts",
    "test:ui:tauri": "pnpm exec playwright test -c tests/e2e/playwright.tauri-auth.config.mts",
    "test:ui:edge": "pnpm exec playwright test -c tests/e2e/playwright.session-edge.config.mts",
    "test:ui:update": "pnpm exec playwright test -c tests/e2e/playwright.config.mts --update-snapshots",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check ."
  },
  "devDependencies": {
    "@biomejs/biome": "latest",
    "@playwright/test": "1.57.0",
    "@vitest/coverage-v8": "latest",
    "concurrently": "^9.2.1",
    "turbo": "latest",
    "vitest": "latest"
  }
}
