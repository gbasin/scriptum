# Relay auth + runtime configuration for local Docker compose.
# Copy to docker/.env and replace placeholder values.

# Required
DATABASE_URL=postgres://scriptum:scriptum@localhost:5432/scriptum
JWT_SECRET=change-me-generate-with-openssl-rand-base64-32

# OAuth (GitHub)
# Callback URL: http://localhost:8080/v1/auth/oauth/github/callback
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Optional
RELAY_PORT=8080
RELAY_HOST=0.0.0.0
LOG_FILTER=info
WS_BASE_URL=ws://localhost:8080
SHARE_LINK_BASE_URL=http://localhost:3000/share
